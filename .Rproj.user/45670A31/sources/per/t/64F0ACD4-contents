# :::: Generate Data for RMarkdown Document ::::
library(openxlsx)
library(data.table)

wb <- createWorkbook(title = "Claims Data", subject = "Solution Design");
wb$addWorksheet(sheetName = "Info" , showGridLines = FALSE);
wb$addWorksheet(sheetName = "Data" , showGridLines = FALSE);
wb$addWorksheet(sheetName = "Chart", showGridLines = FALSE);

.names <- rlang::exprs(clm_header_id, clm_line_id, adj_id, service_date, adj_date, adj_amt, adj_status, rec_insrt_date, rec_upd_date) |>  as.character()
claims_data <- rep.int(NA, length(.names)) |> as.list() |> purrr::set_names(.names) |> as.data.table(key = c(.names))
